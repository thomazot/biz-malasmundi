.owl
    &-prev, &-next
        text-indent: 0
        display: flex
        justify-content: center
        align-items: center
        background: none
        box-shadow: none

        &:hover
            background: none

            .ico
                fill: color1_bg

        .ico
            width: 23px
            height: 23px
            fill: #cfcfcf

        &:before
            display: none

@media (min-width: viewport + 220)
    .owl
        .products &-next
            right: -100px

        .products &-prev
            left: -100px

        .products &-pagination
            display: none