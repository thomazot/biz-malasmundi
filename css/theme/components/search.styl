.search
    &__button
        background: #fff

        .ico
            fill: color1_bg
            width: 20px
            height: 20px

@media (min-width: 569px)
    .search
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1)

        .header &
            flex: 1
            min-width: 0

        .header &__input
            height: 40px
            box-shadow: none
            border: 0 !important

            &::placeholder
                color: #c8c8c8
                font-size: 11px
                font-weight: semibold

            &:focus::placeholder
                color: transparent

        &__button
            display: flex
            justify-content: center
            aling-items: center
            width: 40px
            height: 40px
            box-shadow: none
            padding: 0

            .ico
                width: 16px
                height: 16px

@media (min-width: 993px)
    .search
        .header &
            order: -2
            flex: 0 1 27%