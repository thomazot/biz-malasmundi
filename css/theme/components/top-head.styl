.top-head
    display: none
    background: color1_bg
    color: #fff
    margin-bottom: 0 !important

    &__container
        display: flex
        padding: 0 gap

    &__item
        flex: 1
        min-width: 0

        &:last-child
            flex: 0 0 25%
            display: flex
            justify-content: flex-end
            align-items: center

@media (min-width: 992px)
    .top-head
        display: block