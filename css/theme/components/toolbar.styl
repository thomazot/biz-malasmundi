.toolbar
    .amount, .view-mode, .limiter
        display: none

    .sort-by
        position: relative
        background: #ebebeb
        margin-left: 5px
        border-radius: 5px

        &:after
            content: ''
            position: absolute
            top: 0
            right: 0
            width: 40px
            height: 100%
            background: url(down) no-repeat center center
            background-size: 9px 5px

        label
            display: none

        select
            appearance: none
            box-shadow: none
            width: 100%
            height: 35px
            border: 0
            padding: 0 40px 0 15px
            background: none

    .sorter
        margin-left: 0

        &:before
            content: 'Ordenar por'
            font-size: 12px
            font-weight: semibold
            color: #2c2829
            min-width: 90px

@media (min-width: 993px)
    .toolbar
        justify-content: flex-end
        height: 35px
        margin-bottom: 15px
        margin-top: -50px