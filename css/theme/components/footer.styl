.footer
    text-align: center

    &-container
        margin-top: 0

    .flex--a-center
        justify-content: center

    .mymenu
        .a--0
            font-size: 12px
            font-weight: medium
            text-transform: uppercase

    &__title
        font-size: 16px
        font-weight: medium
        text-transform: uppercase
        margin-bottom: 25px

    &__phone
        font-size: 17px
        font-weight: medium
        display: block

    &__email
        display: block
        margin-top: 15px
        font-size: 12px
        font-weight: medium
        text-transform: uppercase

    &__box
        padding: 30px 0

    h3.footer__title
        color: #fff

@media (min-width: 993px)
    .footer
        display: flex
        justify-content: space-between
        text-align: left

        .flex--a-center
            justify-content: flex-start

        &__box
            padding: 30px

        &__item
            display: flex
            justify-content: flex-start
            flex-flow: row wrap

            &:first-child
                margin: 0 -30px

                .footer__box
                    &:nth-child(1), &:nth-child(2)
                        flex: 0 0 50%

            &:last-child
                flex: 0 0 255px
                padding: 30px 10px 0
