.instagram
    margin-bottom: 0 !important

    &__header
        text-align: center

    &__title
        font-size: 18px
        font-weight: semibold
        text-transform: center
        text-align: center
        text-transform: uppercase
        letter-spacing: 5px
        padding: 15px 0

    &__main
        display: flex
        justify-content: center
        align-items: center
        overflow: hidden
        max-width: 100%
        padding-top: 15px

        a
            display: block
            flex: 0 0 250px

        img
            width: 100%
            height: 100%
            object-fit: cover