.category-thumb, .ias-noneleft
    display: none !important

.category-title
    margin-bottom: 15px

    h1
        display: flex
        justify-content: flex-start
        align-items: center
        height: 35px
        font-size: 22px
        font-weight: semibold
        color: color1_bg
        margin-bottom: 0

.category-description
    border: 0
    padding: 10px 0
    font-size: 12px
    font-weight: regular
    color: #a7a7a7

.category-image
    margin-top: -16px

    img
        width: 100%
        object-fit: contain

.col-main
    .category-image
        display: none

@media (min-width: 993px)
    .category-title
        padding-right: 330px